<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div class="card">
            <img class="card-img-top" src="https://cdn.pixabay.com/photo/2016/06/29/18/46/burger-1487481__340.png" alt="Card image cap">
            <h1 class="display-4">Eat Da Burger</h1>
        </div>
    </div>
</div>

<h2>Add a Burger</h2>
<form id="addburger" class="button-size">
    <div class="form-group">
        <input type="text" id="burger" name="burger_name">
    </div>
    <div>
        <button id="addburgerbtn" type="submit">Add Burger</button>
    </div>

</form>



<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    <li>
        <form action="/api/burgers" method="POST">
            <textarea type="text" name="burger">{{this.burger_name}}</textarea>
            <button id="devourit" type="submit" class='burgerAvailable' data-id="{{this.id}}" >Devour it</button>
        </form>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured it</h2>
<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    <div class='burgerEaten'>
         <form action="/api/burgers/{{this.id}}" method="PUT">
        <div>
            <textarea type="text" name="burger">{{this.burger_name}}</textarea>
        </div>
        </form>
    </div>
    {{/if}}
    {{/each}}
</ul>